# Backend environment example
# Copy this file to .env and adjust as needed

NODE_ENV=development
PORT=5050
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DATABASE=gpstracker
MYSQL_USER=root
MYSQL_PASSWORD=
JWT_SECRET=change_me_in_production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=7

# CORS
CORS_ORIGIN=*

# MQTT (optional)
MQTT_BROKER_URL=mqtt://202.74.74.42:1883
MQTT_CLIENT_ID=gpstracker-backend-dev
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=gpstracker/device/

# Telegram Bot
# Get from @BotFather
TELEGRAM_BOT_TOKEN=
TELEGRAM_DEFAULT_CHAT_ID=
TELEGRAM_COOLDOWN_MINUTES=10
TELEGRAM_DEVICE_INACTIVE_COOLDOWN_MINUTES=10

# Device inactivity (ms)
DEVICE_INACTIVE_TIMEOUT_MS=40000

# Default admin seeding (used by npm run seed:admin)
ADMIN_EMAIL=admin@admin.com
ADMIN_NAME=admin
ADMIN_PASSWORD=admin123
